@{
    ViewData["Title"] = "Liste des Produits";
}

<h2>Liste des Produits</h2>

<table class="table">
    <thead>
        <tr>
            <th>Libellé</th>
            <th>Prix Unitaire</th>
            <th>Quantité en Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.Libellé</td>
                <td>@produit.PrixUnitaire</td>
                <td>@produit.QuantitéStock</td>
                <td>
                    <a href="@Url.Action("Edit", "RS", new { id = produit.Id })" class="btn btn-warning">Modifier</a>
                    <a href="@Url.Action("Delete", "RS", new { id = produit.Id })" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "RS")" class="btn btn-success">Ajouter un produit</a>
