@model Ges_Commandes.Models.Commande

@{
    ViewData["Title"] = "Détails de la Commande";
}

<h2>Détails de la Commande</h2>

<table class="table">
    <tr>
        <th>Date</th>
        <td>@Model.Date.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Montant</th>
        <td>@Model.Montant</td>
    </tr>
    <tr>
        <th>État</th>
        <td>@Model.Etat</td>
    </tr>
    <tr>
        <th>Client</th>
        <td>@Model.Client.Nom @Model.Client.Prenom</td>
    </tr>
</table>

<a href="@Url.Action("Commandes", "Client")" class="btn btn-primary">Retour à la liste</a>
